{% macro wpkey(key) %}
{{ key }}
{% endmacro %}

version: "2"

networks:
  proxy_net:
    external:
      name: proxy_net

volumes:
  {{ REDMINE_DB_VOLUME }}:
    external: True
  {{ REDMINE_VOLUME }}:
    external: True

services:

  redmine:
    image: redmine
    networks:
      - proxy_net
    volumes:
      - {{ REDMINE_VOLUME }}:/usr/src/redmine
    environment:
     VIRTUAL_HOST: {{ redmine_domain_name }}
     VIRTUAL_PROTO: http
     REDMINE_DB_MYSQL: mysql
     REDMINE_DB_PASSWORD: {{REDMINE_DB_PASSWORD}}
{% if SSL == True %}
     LETSENCRYPT_HOST: {{ redmine_domain_name }}
     LETSENCRYPT_EMAIL: {{ redmine_letsencrypt_mail }}
     LETSENCRYPT_TEST: "{{ letsencrypt_testmode }}"
{% endif %}

    links:
      - mysql
    restart: always

  mysql:
    networks:
      - proxy_net
    image: mariadb:latest
    volumes:
      - {{ REDMINE_DB_VOLUME }}:/var/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD={{REDMINE_DB_PASSWORD}}
      - MYSQL_DATABASE=redmine
    restart: always

